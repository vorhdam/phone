{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "phone",
  "homepage": "https://github.com/vorhdam/phone",
  "items": [
    {
      "name": "phone",
      "type": "registry:block",
      "title": "Phone",
      "description": "A simple component that allows you to collect phone numbers.",
      "dependencies": ["libphonenumber-js"],
      "registryDependencies": [
        "input-group",
        "popover",
        "command",
        "https://shadcn-flags.vercel.app/r/flag.json"
      ],
      "files": [
        {
          "path": "src/registry/new-york/phone/ui/phone.tsx",
          "type": "registry:ui"
        },
        {
          "path": "src/registry/new-york/phone/lib/countries.json",
          "type": "registry:lib"
        }
      ],
      "css": {
        "@layer base": {
          "::-webkit-scrollbar": {
            "width": "1.2rem"
          },
          "::-webkit-scrollbar-thumb": {
            "border": "0.4rem solid rgba(0, 0, 0, 0)",
            "background-clip": "padding-box",
            "background-color": "hsl(var(--border))",
            "border-radius": "var(--radius)"
          },
          "::-webkit-scrollbar-thumb:hover": {
            "background-color": "hsl(var(--accent))"
          }
        }
      }
    }
  ]
}
